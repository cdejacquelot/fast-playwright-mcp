{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["chrome"]
  },
  "overrides": [
    {
      "includes": ["extension/**/*.tsx"],
      "linter": {
        "rules": {
          "performance": {
            "noImgElement": "off"
          }
        }
      }
    },
    {
      "includes": ["src/extension/**/*.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedPrivateClassMembers": "off"
          }
        }
      }
    },
    {
      "includes": ["tests/fixtures.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noEmptyPattern": "off"
          }
        }
      }
    }
  ]
}
