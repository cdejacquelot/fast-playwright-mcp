{
  "name": "tontoko/fast-playwright-mcp",
  "version": "0.0.32",
  "description": "Fast Playwright Tools for MCP",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomohiko/fast-playwright-mcp.git"
  },
  "homepage": "https://playwright.dev",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "build:benchmark": "tsc -p benchmark/tsconfig.json",
    "benchmark": "npm run build:benchmark && node benchmark/lib/index.js",
    "benchmark:verbose": "npm run build:benchmark && node benchmark/lib/index.js --verbose",
    "benchmark:quiet": "npm run build:benchmark && node benchmark/lib/index.js --quiet",
    "lint": "npm run update-readme && eslint . && tsc --noEmit && tsc -p benchmark/tsconfig.json --noEmit",
    "lint-fix": "eslint . --fix",
    "update-readme": "node utils/update-readme.js",
    "watch": "tsc --watch",
    "test": "playwright test",
    "ctest": "playwright test --project=chrome",
    "ftest": "playwright test --project=firefox",
    "wtest": "playwright test --project=webkit",
    "run-server": "node lib/browserServer.js",
    "clean": "rm -rf lib benchmark/lib",
    "npm-publish": "npm run clean && npm run build && npm run test && npm publish"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@types/sharp": "^0.31.1",
    "commander": "^13.1.0",
    "debug": "^4.4.1",
    "dotenv": "^17.2.0",
    "fast-diff": "^1.3.0",
    "mime": "^4.0.7",
    "playwright": "1.55.0-alpha-1753913825000",
    "playwright-core": "1.55.0-alpha-1753913825000",
    "sharp": "^0.34.3",
    "ws": "^8.18.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "1.55.0-alpha-1753913825000",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.13.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript-eslint/utils": "^8.26.1",
    "esbuild": "^0.20.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-notice": "^1.0.0",
    "openai": "^5.10.2",
    "typescript": "^5.8.2"
  },
  "bin": {
    "mcp-server-playwright": "cli.js"
  }
}
